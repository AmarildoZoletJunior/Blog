<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <link rel="stylesheet" href="/panel.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <div class="col-12 d-flex flex-row justify-content-between align-items-end">
        <h1 class="mt-5">Painel de categorias</h1>
        <button class="btn btn-success w-20 h-50">Criar nova categoria</button>
    </div>
        <hr>
       <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Titulo
                </th>
                <th>
                    URL
                </th>
                <th>
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
            <% resposta.forEach(function(categorias){ %>
            <tr>
                <th><%= categorias.id %></th>
                <th><%= categorias.title %></th>
                <th><%= categorias.slug %></th>
                <th><button class="btn btn-primary mx-2">Editar</button>
                    <form action="" method="post">
                    <button class="btn btn-danger mx-2">Remover</button>
                </form>
                </th>
            </tr>
            <% }); %>
        </tbody>
       </table>
    </div>
</body>
<%- include ('../../components/links.ejs') %>